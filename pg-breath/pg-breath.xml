<theme>
  <formatVersion>4</formatVersion>

  <view name="system, basic, detailed, video, grid">
    <image name="logo">
      <path>./_inc/images/logo_${system.name}.png</path>
    </image>

    <image name="background" extra="true">
      <path>./_inc/images/background.jpg</path>
    </image>

    <image name="overlay" extra="true">
      <path>./_inc/images/overlay_${system.name}.png</path>
    </image>
  </view>

  <view name="basic, detailed, video, grid">
    <image name="logo">
      <origin>0.5 0.5</origin>
      <pos>0.2279 0.09</pos>
    </image>

    <image name="help_list" extra="true">
      <path>./_inc/images/help-list.png</path>
      <origin>1 1</origin>
      <pos>1 1</pos>
    </image>
  </view>

  <view name="system">
    <image name="system_help" extra="true">
      <path>./_inc/images/help-system.png</path>
      <origin>1 1</origin>
      <pos>1 1</pos>
    </image>

    <image name="band" extra="true">
      <origin>0.5 0.5</origin>
      <path>./_inc/images/band.png</path>    
      <pos>0.5 0.5</pos>
    </image>
  </view>
  
  <view name="basic detailed video">
    <image name="list-bg" extra="true">
      <path>./_inc/images/list-bg.png</path>
      <origin>0 1</origin>
      <pos>0.0365 0.9352</pos>
    </image>

    <textlist name="gamelist">
      <alignment>left</alignment>
      <horizontalMargin>0.0266</horizontalMargin>
      <!--<selectorColor>00000080</selectorColor>-->
      <selectedColor>FFFFFF</selectedColor>
      <primaryColor>000000</primaryColor>
      <secondaryColor>888888</secondaryColor>
      <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
      <pos>0.0182 0.1880</pos>
      <scrollSound>./_inc/sounds/scroll.wav</scrollSound>
      <selectorColor>ffffff</selectorColor>
      <selectorImagePath>./_inc/images/select-bar.png</selectorImagePath>
      <selectorHeight>0.0407</selectorHeight>
      <selectorOffsetY>-0.0046</selectorOffsetY>
      <size>0.4203 0.7380</size>
      <fontSize>0.02</fontSize>
    </textlist>
  </view>
  
  <view name="detailed">
    <!-- Game image -->
    <image name="md_image">
      <origin>0.5 0.5</origin>
      <pos>0.7073 0.5685</pos>
      <maxSize>0.5854 0.8056</maxSize>
    </image>

    <!-- Rating without label -->
    <!-- silly "bug", you set the position of the FIRST star only -->
    <rating name="md_rating">
      <origin>0.0 0.0</origin>
      <pos>0.6628 0.1870</pos>
      <size>0.0177 0.0315</size>
      <filledPath>./_inc/images/rating-star-full.png</filledPath>
      <unfilledPath>./_inc/images/rating-star-empty.png</unfilledPath>
    </rating>

    <!-- Release year without label -->
    <datetime name="md_releasedate">
      <alignment>center</alignment>
      <!--<color>48474D80</color>-->
      <color>00000040</color>
      <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
      <fontSize>0.03</fontSize>
      <origin>0.5 0.5</origin>
      <pos>0.7070 0.24</pos>
      <format>%Y</format>
    </datetime>

    <!-- Description -->    
    <!--<text name="md_description">
      <pos>0.50 0.50</pos>
      <size>0.40 0.2</size>
      <color>000000</color>
      <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
      <fontSize>0.02</fontSize>
      <alignment>left</alignment>
      <forceUppercase>0</forceUppercase>
      <lineSpacing>1.6</lineSpacing>
    </text>-->

  </view>
  
  <view name="video">
  </view>

  <view name="grid">
  </view>

  <feature supported="carousel">
    <view name="system">
      <carousel name="systemcarousel">
        <type>horizontal</type>
        <origin>0.5 0.5</origin>
        <pos>0.5 0.5</pos>    <!-- Currently only y value is used -->
        <size>1.0 0.2</size> <!-- currently only height value is used -->
        <color>ffffff00</color>
        <logoScale>2</logoScale>
        <logoSize>0.125 0.155</logoSize>
        <maxLogoCount>5</maxLogoCount>
      </carousel>

      <text name="systemInfo">
        <backgroundColor>00000000</backgroundColor>
        <color>00000080</color>
        <fontPath>./_inc/fonts/Roboto-Light.ttf</fontPath>
        <fontSize>0.020</fontSize>
      </text>
    </view>
  </feature>

</theme>

